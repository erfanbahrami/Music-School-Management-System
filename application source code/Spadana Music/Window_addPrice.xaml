        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Style="{DynamicResource SkinWindowStyle}"
        Title="Window_addPrice" Height="182.711" Width="256.37">
    <Grid Background="{DynamicResource WindowBackgroundBrush}">
